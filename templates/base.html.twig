<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Machine Vagabonde!
			{% endblock %}
		</title>

		{# Favicon #}
		<link
		rel="shortcut icon" href="{{ asset('images/favicon_io/favicon-96x96.png')}}">

		{# Bootstrap Icons #}
		<link
		rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"/>

		{# AOS animations #}
		<link
		href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet"/>

		{# Compiled SCSS #}
		<link rel="stylesheet" href="{{ asset('app.css') }}"> {% block stylesheets %}{% endblock %}
		</head>

		<body>
			{# NAVBAR #}
			{% block navbar %}{% endblock %}

			{# PAGE CONTENT #}
			<main>
				{% block body %}{% endblock %}
			</main>

			{# FOOTER #}
			{% include "partials/_footer.html.twig" %}

			{# Bootstrap JS #}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>

			{# AOS JS #}
			<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

			<script>
				AOS.init({once: true, easing: "ease-in-out"});
			</script>

			{% block javascripts %}{% endblock %}
		</body>
	</html>
